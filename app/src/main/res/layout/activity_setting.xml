<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".setting"
    android:background="@drawable/back_image">

    <TextView
        android:id="@+id/textView5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="55dp"
        android:layout_marginEnd="54dp"
        android:layout_marginBottom="603dp"
        android:gravity="center"
        android:text="Setting Screen"
        android:textSize="30dp"
        android:textAlignment="center"
        android:textStyle="italic"
        tools:layout_editor_absoluteX="129dp"
        tools:layout_editor_absoluteY="44dp"
        android:textColor="#fff"/>

    <Switch
        android:id="@+id/notification"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="11dp"
        android:layout_marginBottom="443dp"
        android:text="Enable Push Notification"
        android:textSize="18dp"
        android:textColor="#fff"/>

    <Switch
        android:id="@+id/remainder"
        android:layout_width="374dp"
        android:layout_height="57dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="11dp"
        android:layout_marginBottom="358dp"
        android:text="Events and Remainder"
        android:textSize="18dp"
        android:textColor="#fff"/>

    <Switch
        android:id="@+id/sms"
        android:layout_width="368dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="287dp"
        android:text="Received Sms"
        android:textColor="#fff"
        android:textSize="18dp" />

    <Switch
        android:id="@+id/mode"
        android:layout_width="368dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="15dp"
        android:layout_marginBottom="328dp"
        android:text="Debug Mode"
        android:textColor="#fff"
        android:textSize="18dp" />

    <Button
        android:id="@+id/savechanges"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="164dp"
        android:layout_marginBottom="114dp"
        android:background="#6ba1ff"
        android:text="Save Changes"
        android:textColor="#fff"
        android:textStyle="bold"
        android:onClick="settingSave"/>
</RelativeLayout>